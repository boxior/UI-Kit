{
    "name": "ui-kit",
    "version": "0.1.0",
    "main": "dist/index.js",
    "private": true,
    "dependencies": {
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "antd": "^3.23.4",
        "babel-core": "^6.26.3 ",
        "classnames": "^2.2.6",
        "lodash": "^4.17.19",
        "prop-types": "^15.7.2",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-scripts": "^3.1.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.2",
        "babel-loader": "^8.0.6",
        "husky": "^3.0.5",
        "lint-staged": "^9.3.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2"
    },
    "scripts": {
        "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
        "build-win": "rm -rf dist && SET NODE_ENV=production && babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
        "test": "react-scripts test"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
